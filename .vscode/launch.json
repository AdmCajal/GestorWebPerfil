{
    "version": "0.2.0",
    "configurations": [
        {
          "type": "msedge",
          "request": "launch",
          "name": "Launch Edge against localhost",
          "url": "http://localhost:4100",
          "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}
